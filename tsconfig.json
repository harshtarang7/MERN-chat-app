{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                   
    "rootDir": "backend/src",                       
    "outDir": "backend/dist",                       
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["backend/src"],
  "exclude": ["node_modules"]
}
